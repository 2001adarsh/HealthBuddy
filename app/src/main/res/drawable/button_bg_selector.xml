<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <gradient android:angle="135" android:endColor="@color/hot_pink" android:startColor="@color/azure" />
            <corners android:radius="20dp" />
        </shape>

    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="225" android:endColor="@color/colorPrimary" android:startColor="@color/corn_flower" />
            <corners android:radius="20dp"/>
        </shape>

    </item>
</selector>